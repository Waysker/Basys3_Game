#include <stdint.h>
#include "../drivers/vga.h"
#include "ball.h"

uint8_t h;
uint8_t w;
int8_t xs;
int8_t ys;

struct Velocity {
	int16_t x;
	int16_t y;
};

void ballInit(){
	h = 50;
	w = 50;
	xs = -1;
	ys = -1;
	circleBresenham(w,Y_MAX-h,2,BALL_COLOR);
}
void ballUpdate(){
	if(h>=9){
		circleBresenham(w,Y_MAX-h,2,BG_COLOR);
		h=h+ys;
		w=w+xs;
		//s++;
		circleBresenham(w,Y_MAX-h,2,BALL_COLOR);
		}else{
			circleBresenham(w,Y_MAX-h,2,BALL_COLOR);
		}



}
