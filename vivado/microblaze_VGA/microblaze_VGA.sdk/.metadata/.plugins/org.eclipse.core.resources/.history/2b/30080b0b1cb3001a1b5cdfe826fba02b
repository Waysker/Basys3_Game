#include <stdint.h>
#include "../drivers/vga.h"
#include "ball.h"

struct Velocity {
	int16_t x;
	int16_t y;
};

struct Position {
	int16_t x;
	int16_t y;
};

uint8_t h;
uint8_t w;
int8_t xs;
int8_t ys;
struct Velocity v;
struct Position p;

void ballInit(){
	h = 50;
	w = 50;
	xs = -1;
	ys = -1;
	v.x = 0;
	v.y = 0;
	p.x = 5000;
	p.y = 5000;
	circleBresenham(w,Y_MAX-h,2,BALL_COLOR);
}
void ballUpdate(){
	if(h>=9){
		v.y--;
		p.y = (p.y + v.y);
		if((p.y/100)<h){
			circleBresenham(w,Y_MAX-h,2,BG_COLOR);
			h--;
			circleBresenham(w,Y_MAX-h,2,BALL_COLOR);
		}
		//circleBresenham(w,Y_MAX-(p.y%10),2,BG_COLOR);
		//h=h+ys;
		//w=w+xs;
		//s++;
		//circleBresenham(w,Y_MAX-h,2,BALL_COLOR);
		}else{
			//circleBresenham(w,Y_MAX-h,2,BALL_COLOR);
		}



}
